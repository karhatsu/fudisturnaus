{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "comma-dangle": ["warn", {
            "objects": "always-multiline",
            "functions": "ignore"
        }],
        "no-trailing-spaces": 1,
        "max-len": [1, { "code": 150 }],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
