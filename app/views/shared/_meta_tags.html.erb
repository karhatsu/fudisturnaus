<% title = "#{DOMAIN}#{defined?(@tournament) ? " - #{@tournament.name}" : ''}#{official ? ' - TOIMITSIJAN SIVU' : ''}" %>
<title><%= title %></title>
<% description = defined?(@tournament) ? "#{@tournament.name}, #{@tournament.location}, #{@tournament.start_date.strftime('%d.%m.%y')}" : 'Turnaussivusto jalkapalloturnausten otteluohjelmia varten' %>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
<meta name="description" content="<%= description %>">
<meta property="og:title" content="<%= title %>">
<meta property="og:description" content="<%= description %>">
<meta name="twitter:title" content="<%= title %>">
<meta name="twitter:description" content="<%= description %>">
